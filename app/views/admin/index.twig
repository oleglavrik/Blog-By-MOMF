{% extends "layout/admin.twig" %}

{% block title %} MOMF blog | Recent articles {% endblock %}

{% block css %}
    {{ parent() }}
    <link href="/css/admin-side.css" rel="stylesheet">
{% endblock %}

{% block content %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12" id="content">
                <div id="content-wrapper">
                    <h1 class="text-center">Administration side MOMF</h1>
                    {{ showMessages() }}
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            All Posts
                            <a href="/post/add" class="btn btn-success pull-right">Add post</a>
                        </div>
                        <div class="panel-body">
                            <table class="table table-hover" id="post-table">
                                <thead>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>CreatedAt</th>
                                    <th class="text-center">Action</th>
                                </thead>
                                <tbody>
                                    {% for post in posts %}
                                        <tr>
                                            <td>{{ post.title }}</td>
                                            <td>{{ post.author }}</td>
                                            <td>{{ post.createdAt }}</td>
                                            <td class="text-center">
                                                <!-- Split button -->
                                                <!-- Small button group -->
                                                <div class="btn-group">
                                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        Actions <span class="caret"></span>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <a href="/post/edit/{{ post.id }}">Edit</a>
                                                        </li>
                                                        <li><a href="/post/delete/{{ post.id }}">Delete</a></li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>

                            <!-- Pager -->
                            <ul class="pager">
                                <li class="next">
                                    <a href="#">Older Posts &rarr;</a>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block js %}
    {{ parent() }}
    <!-- home page js -->
    <script type="text/javascript" src="/js/admin/index.js"></script>
{% endblock %}