{% extends "layout/layout.twig" %}

{% block title %} MOMF blog | Recent articles {% endblock %}

{% block content %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1" id="test">
                <div id="content-wrapper">
                    {% for post in posts %}
                    <div class="post-preview">
                        <a href="/post/show/{{ post.id }}">
                            <h2 class="post-title">
                                {{ post.title }}
                            </h2>
                            <h3 class="post-subtitle">
                                {{ post.description }}
                            </h3>
                        </a>
                        <p class="post-meta">Posted by <a href="#">{{ post.author }}</a> on {{ post.createdAt | date("l d, Y") }} </p>
                    </div>
                    <hr>
                    {% endfor %}
                </div>

                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        <a href="#">Older Posts &rarr;</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

{% endblock %}

{% block js %}
{{ parent() }}
    <!-- home page js -->
    <script type="text/javascript" src="/js/index/index.js"></script>
{% endblock %}

