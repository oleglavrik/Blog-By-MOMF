{% extends "layout/layout.twig" %}

{% block title %} MOMF blog | Recent articles {% endblock %}

{% block header_bg %}
    <header class="intro-header" style="background-image: url('/img/post-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>{{ post.title }}</h1>
                        <h2 class="subheading">{{ post.description }}</h2>
                        <span class="meta">Posted by <a href="#">{{ post.author }}</a> on {{ post.createdAt | date("l d, Y") }}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block content %}
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    {% for line in post.content %}
                        <p>{{ line }}</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </article>
{% endblock %}