{% extends "layout/admin.twig" %}

{% block title %} MOMF blog | Recent articles {% endblock %}

{% block css %}
    <!-- Bootstrap Core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Theme CSS -->
    <link href="/css/clean-blog.css" rel="stylesheet">
    <link href="/css/admin-side.css" rel="stylesheet">
{% endblock %}

{% block content %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12" id="content">
                <div id="content-wrapper">
                    <h1 class="text-center">Administration side MOMF</h1>
                    {{ showMessages() }}
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Would you like delete the post ?
                        </div>
                        <div class="panel-body">
                            <table class="table table-hover" id="post-table">
                                <thead>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>Description</th>
                                    <th>CreatedAt</th>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>{{ post.title }}</td>
                                        <td>{{ post.author }}</td>
                                        <td>{{ post.description }}</td>
                                        <td>{{ post.createdAt }}</td>
                                    </tr>
                                </tbody>
                            </table>

                            <form action="/post/delete/{{ post.id }}" method="post">
                                <input type="text" name="postID" hidden="hidden" value="{{ post.id }}">
                                <div class="pull-right">
                                    <input class="btn btn-default" type="submit" name="cancel " value="Cancel" />
                                    <input class="btn btn-danger" type="submit" name="post-delete" value="Delete" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block js %}
    {{ parent() }}
    <!-- home page js -->
    <script type="text/javascript" src="/js/admin/index.js"></script>
{% endblock %}